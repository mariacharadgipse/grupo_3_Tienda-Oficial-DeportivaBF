<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('../partials/head', { title: 'producto' , stylesheet: ['/css/styles.css','/css/index.css','/css/produ.css']}) %>

    <body>
        <!-- Header -->
        <%- include('../partials/header') %>
            <!-- /Header -->

            <!-- todos los productos -->
            <main class="main">
                <div class="contGeneral">
                    <div class="tituloCatalogo">
                        <h2 class="tituloGeneral"><strong>TODOS NUESTROS PRODUCTOS</strong></h2>
                    </div>
                    <div class="link-a-create">
                        <h3><a href="/products/create" class="enl">Sube un nuevo producto</a></h3>
                    </div>
                    <div class="contProducts">
                        
                        <% products.forEach(product=> { %>
                            <section class="containerProduct">
                                <a class="enlaces" href="/products/detail/<%= product.id %>">
                                    <figure class="product-box_image">
                                        <img src="/img/products/<%= product.image %>" alt="imagen de producto"
                                            width="90%" height="300px auto">
                                    </figure>
                                    <article class="product-box-info">

                                        <h2 class="priceProd">
                                            <stong><%= product.name %>
                                            </stong>
                                        </h2>

                                        <h2 class="nameProd">
                                            <stong>$<%= product.price %>
                                            </stong>
                                        </h2>

                                        <span class="discountProd">
                                            <%= product.discount %>% OFF
                                        </span>

                                    </article>
                                </a>
                            </section>
                            <% }) %>
                </div>
            </main>
            <!-- /todos los productos -->

            <!-- footer -->
            <%- include('../partials/footer')%>
                <!-- /footer -->
    </body>

</html>